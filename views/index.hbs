<h1>Llevamos <span id="cantidad"></span> pulsaciones</h1>
<br />
<button id="btnPulsacion">Pulsa para incrementar</button>

<script>
var socket = io.connect('http://localhost');

$('#btnPulsacion').click(function() {
  socket.emit('pulsacion');
});

socket.on('mensajeCantidadPulsaciones', function(pulsaciones){
  $('#cantidad').html(pulsaciones);
});
</script>